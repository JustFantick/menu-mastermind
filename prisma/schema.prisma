generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  username  String      @unique
  password  String
  avatarUrl String?     
  favorites Favorites[]
  reviews   Reviews[]
}

model Favorites {
  id        Int      @id @default(autoincrement())
  userId    Int
  recipeId  String   

  user      Users    @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Reviews {
  id        Int      @id @default(autoincrement())
  userId    Int
  date      DateTime @default(now())
  text      String
  rating    Int
  recipeId  Int

  user      Users    @relation(fields: [userId], references: [id])
  
  @@index([userId])
}
